{
    "env": {
        "node": true,
        "es6": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"      
    },
    "rules": {
        "prettier/prettier": [
          "error",
          {
            "endOfLine": "auto",
            "semi": true,
            "singleQuote": true,
            "tabWidth": 2,
            "useTabs": false,
            "trailingComma": "es5",
            "bracketSpacing": true,
            "arrowParens": "avoid"
          }
        ],
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"]
      }
}

